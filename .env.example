# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Kafka Configuration
KAFKA_BROKERS=kafka-broker-1:9092,kafka-broker-2:9092
KAFKA_CLIENT_ID=aws-cost-service
KAFKA_TOPIC=aws-costs
KAFKA_USERNAME=
KAFKA_PASSWORD=
KAFKA_SSL=false

# Service Configuration
FETCH_INTERVAL_MINUTES=5     # ✅ Fetch ogni 5 minuti
LOOKBACK_DAYS=1              # ✅ Solo ultimo giorno
GRANULARITY=DAILY            # ✅ DEVE rimanere DAILY (limitazione AWS)
GROUP_BY=SERVICE             # Raggruppa per servizio AWS

# NETMON Configuration
NETMON_IP=0.0.0.0
NETMON_VLAN=AWS
NETMON_SIM=000000000000
NETMON_DIR=0

# Logging
LOG_LEVEL=info
